(define-syntax tester
  (syntax-rules ()
    ((tester op v1 v2 v3)
     (list
      (op v1 v1)
      (op v1 v2)
      (op v1 v3)))))

(define (test-eq t1 t2 t3)
  (tester eqv? t1 t2 t3))

(define (test-eqv t1 t2 t3)
  (tester eqv? t1 t2 t3))

(define (test-equal t1 t2 t3)
  (tester equal? t1 t2 t3))

(define-syntax check-3
  (syntax-rules ()
    ((check-3 test-op val1 val2 val3)
     (let ((test1 val1)
           (test2 val2)
           (test3 val3))
       (test-op test1 test2 test3)))))

